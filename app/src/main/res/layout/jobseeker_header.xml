<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/jobseeker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Job Seeker Profile"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/jobseeker_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobseeker_name"
        android:layout_centerHorizontal="true"
        android:text="jobseeker@example.com"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/jobseeker_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jobseeker_email"
        android:layout_centerHorizontal="true"
        android:text="Phone: 987-654-3210"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:gravity="center" />

    <Button
        android:id="@+id/logout_jobseeker"
        android:text="Logout"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/jobseeker_phone"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>